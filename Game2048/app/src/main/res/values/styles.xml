<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ControlButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/game_button_background</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">80dp</item>
    </style>

    <style name="BackButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/control_button_background</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <!-- Стиль для кнопок главного экрана -->
    <style name="MainButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:background">@drawable/control_button_background</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
