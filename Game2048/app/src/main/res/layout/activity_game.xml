<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#D0A583">

    <!-- Поле 4х4 -->
    <GridLayout
        android:id="@+id/gridGame"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:rowCount="4"
        android:columnCount="4"
        android:background="#D0A583" />

    <!-- Счёт и случайное число -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_below="@id/gridGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Счёт: 0"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:textColor="#BA4353"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_alignStart="@id/gridGame"
        android:gravity="start" />

    <TextView
        android:id="@+id/tvRandom"
        android:layout_below="@id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Случайное число: "
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="#BA4353"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_alignStart="@id/gridGame"
        android:gravity="start" />

    <!-- Кнопки управления -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_below="@id/tvRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnUp"
            style="@style/ControlButtonStyle"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Вверх"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnLeft"
                style="@style/ControlButtonStyle"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Влево"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnRight"
                style="@style/ControlButtonStyle"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Вправо"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDown"
            style="@style/ControlButtonStyle"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Вниз"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        style="@style/BackButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
